    async function fetchHtml() {
      const res = await fetch(`https://corsproxy.io/?${encodeURIComponent(CONSULATE_SITE)}`
      );
      if (!res.ok) throw new Error('ูุดู ุชุญููู ุงููููุน');
      return await res.text();
    }

    async function updateStatuses() {
      try {
        const html = await fetchHtml();

        // ุญุงูุฉ ุจุฑููู/ุจุฑููุณู
        const berlinOk = html.includes('ุจุฑููู') && html.includes('ููุงุนูุฏ');
        const brusselsOk = html.includes('ุจุฑููุณู') && html.includes('ููุงุนูุฏ');
        const mainText = berlinOk || brusselsOk
          ? `โ ${berlinOk?'ุจุฑููู':''}${berlinOk&&brusselsOk?' ู ':''}${brusselsOk?'ุจุฑููุณู':''} ูุฏููุง ููุงุนูุฏ!`
          : 'โ ูุง ููุฌุฏ ููุงุนูุฏ ุญุงููุงู ูู ุจุฑููู/ุจุฑููุณู.';
        document.getElementById('mainStatus').textContent = mainText;

        if (telegramId && (berlinOk || brusselsOk)) {
          notifyTelegram(mainText);
        }

        // ุญุงูุฉ ุงูููุตููุงุช ุงูุฃุฎุฑู
        const rows = CONSULATES.filter(c => c!=='ุจุฑููู'&&c!=='ุจุฑููุณู')
          .map(name => {
            const available = html.includes(name) && html.includes('ููุงุนูุฏ');
            return `<tr><td class="py-2 border">${name}</td><td class="py-2 border ${available?'text-green-600':'text-red-600'}">${available?'โ ูุชุงุญ':'โ ูุง ููุฌุฏ'}</td></tr>`;
          }).join('');
        document.getElementById('otherStatusTable').innerHTML = rows;

      } catch (e) {
        document.getElementById('mainStatus').textContent = 'โ๏ธ ุฎุทุฃ ูู ุงูุชุญูู.';

    function printAppointment() {
      const content = `
        <div style="direction: rtl; font-family: sans-serif; padding: 20px;">
          <h1>ุญุงูุฉ ุงูููุงุนูุฏ ูู ูุฑูุฒ ุงูููุตู ุงูุฅููุชุฑููู</h1>
          <p><strong>ุจุฑููู:</strong> ${document.getElementById('mainStatus').textContent.includes('ุจุฑููู')?'ูุชุงุญ โ':'ูุง ููุฌุฏ โ'}</p>
